{
  "name": "csv-project-sync-tool",
  "version": "1.0.0",
  "description": "Sync a local CSV with a GitHub project - bidirectional synchronization between CSV files and GitHub issues",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "sync": "node dist/index.js sync",
    "push": "node dist/index.js push",
    "pull": "node dist/index.js pull",
    "watch": "ts-node src/index.ts watch",
    "bump-timestamps": "node scripts/bump_timestamps.js",
    "bump-status": "node scripts/bump_status.js",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "github",
    "csv",
    "sync",
    "issues",
    "cli"
  ],
  "author": "Chris Kingdon",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^20.0.0",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "csv-parse": "^5.4.0",
    "csv-stringify": "^6.4.0",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/csv-parse": "^1.2.5",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "eslint": "^8.53.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.3.2"
  }
}
